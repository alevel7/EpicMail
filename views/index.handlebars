
<div class="form">
    <div class="indexlogo">
        <h4>SIGN IN</h4>
        <img src="/public/img/email.png" alt="mail logo">

    </div>

    <form action="/v1/auth/login" method="POST">
     {{> _msg}}
        <h4 class="mediumText mb-1 ">SIGN IN</h4>
        <div class="form-group mb-1">
            <!-- <label for="username" class="mediumText">Email</label> -->
            <input type="text" name="email" id="email" class="formInput" placeholder="Email" required>
        </div>
        <div class="form-group  mb-1">
            <!-- <label for="password" class="mediumText">Password</label> -->
            <input type="password" name="password" id="password" class="formInput" placeholder="Password" required>
        </div>
        <button type="submit" class="button ">Log In</button>
        <a href="reset.html">Forgot password?</a>
    </form>